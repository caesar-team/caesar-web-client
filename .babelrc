{
  "presets": ["@babel/env", "next/babel", "@babel/preset-flow"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "common": "./common",
          "components": "./components",
          "containers": "./containers",
          "pages": "./pages",
          "public": "./public"
        }
      }
    ],
    [
      "wrap-in-js",
      {
        "extensions": ["less$"]
      }
    ],
    ["styled-components", { "ssr": true, "displayName": true, "preprocess": false } ]
  ]
}
