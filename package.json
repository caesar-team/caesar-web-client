{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn --cwd packages/web-app dev",
    "build": "yarn --cwd packages/web-app build",
    "start": "yarn --cwd packages/web-app start",
    "secure:dev": "yarn --cwd packages/secure-app dev",
    "secure:build:production": "yarn --cwd packages/secure-app build:production",
    "secure:start:production": "yarn --cwd packages/secure-app start:production"
  },
  "npmClient": "yarn",
  "useWorkspaces": true
}
